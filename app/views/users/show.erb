<h2><%= @user.username %></h2>

<h3><%= @user.username %>'s Blog Posts:</h3>

<% @blogposts.each do |blogpost| %>  
    <div class="container">
        <h4><a href="/blogposts/<%= blogpost.id %>"><%= blogpost.title %></a></h4>
        <small><strong>Created: <%= blogpost.created_at %></strong></small><br>
        <content><%= blogpost.content %></content>
    </div>
<% end %>